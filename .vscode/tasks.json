{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "slangc: compile",
      "detail": "Compile all Slang shaders",
      "icon": {
        "color": "terminal.ansiMagenta",
        "id": "paintcan"
      },
      "type": "shell",
      "group": "build",
      "command": "./slangc.sh",
      "problemMatcher": {
        "owner": "slangc",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "(.+\\.slang)\\((\\d+)\\): ((\\w+) .+)",
            "file": 1,
            "line": 2,
            "severity": 4,
            "message": 3,
          },
          {
            "regexp": "(.+)",
            "code": 1,
          }
        ]
      },
    },
  ]
}
