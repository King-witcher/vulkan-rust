{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build: debug",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
      ],
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "debug"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$rustc"]
    },

    {
      "label": "cargo build: release",
      "type": "cargo",
      "command": "build",
      "args": [
        "--release"
      ],
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "rocket"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"],
    },

    {
      "label": "glslc: compile",
      "detail": "Compile all GLSL shaders",
      "icon": {
        "color": "terminal.ansiMagenta",
        "id": "paintcan"
      },
      "type": "shell",
      "group": "build",
      "command": "./compile_shaders.sh",
      "problemMatcher": {
        "owner": "glslc",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "(.+\\.(frag|vert)):(\\d+): (error|warning): (.+)",
          "file": 1,
          "line": 3,
          "severity": 4,
          "message": 5,
        }
      },
    },

    {
      "label": "build: debug",
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "debug"
      },
      "group": "build",
      "dependsOrder": "parallel",
      "dependsOn": [
        // "glslc: compile",
        "cargo build: debug"
      ],
    },

    {
      "label": "build: release",
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "rocket"
      },
      "group": "build",
      "dependsOrder": "parallel",
      "dependsOn": [
        // "glslc: compile",
        "cargo build: release",
      ],
    },
  ]
}
