{
  "version": "0.2.0",
  "configurations": [
    {
      "console": "integratedTerminal",
      "name": "Run (Debug)",
      "request": "launch",
      "preLaunchTask": "slangc: compile",
      "cargo": {
        "cwd": "${workspaceFolder}",
        "args": ["run"]
      },
      "type": "lldb",
    },
    {
      "console": "integratedTerminal",
      "name": "Run (Release)",
      "request": "launch",
      "preLaunchTask": "slangc: compile",
      "cargo": {
        "cwd": "${workspaceFolder}",
        "args": ["run", "--release"]
      },
      "type": "lldb",
    },
  ]
}
